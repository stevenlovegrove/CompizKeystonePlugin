<?xml version="1.0"?>
<compiz>
	<plugin name="keystone" useBcop="true">
		<_short>Keystone Correct</_short>
		<_long>Keystone Correct Plugin</_long>
		<category>Desktop</category>
		<feature>largedesktop</feature>
		<deps>
			<relation type="after">
				<plugin>composite</plugin>
				<plugin>opengl</plugin>
				<plugin>decor</plugin>
			</relation>
			<relation type="before">
				<plugin>wobbly</plugin>
				<plugin>fade</plugin>
			</relation>
			<requirement>
				<plugin>opengl</plugin>
			</requirement>
		</deps>
		<options>
			<group>
				<_short>Keystone Settings</_short>
				<option name="ks_enable" type="bool">
					<_short>Enable keystoning</_short>
					<_long>Enable keystone transforms on window manager</_long>
					<default>true</default>
				</option>
				<option name="ks_vert" type="float">
					<_short>Horizontal Keystone</_short>
					<_long>Horizontal Keystone</_long>
					<default>0</default>
					<min>-1</min>
					<max>1</max>
					<precision>0.01</precision>
				</option>
				<option name="ks_horz" type="float">
					<_short>Vertical Keystone</_short>
					<_long>Vertical Keystone</_long>
					<default>0</default>
					<min>-1</min>
					<max>1</max>
					<precision>0.01</precision>
				</option>
			</group>
			<group>
				<_short>Bindings</_short>
				<option name="ks_enable_key" type="key">
					<_short>Toggle keystone transform</_short>
					<default>&lt;Control&gt;&lt;Alt&gt;K</default>
				</option>
				<option name="left_key" type="key">
					<_short>Move Left</_short>
					<_long>Move along the keystone to the Left</_long>
					<default>&lt;Control&gt;&lt;Alt&gt;Left</default>
				</option>
				<option name="right_key" type="key">
					<_short>Move Right</_short>
					<_long>Move along the keystone to the right</_long>
					<default>&lt;Control&gt;&lt;Alt&gt;Right</default>
				</option>
				<option name="up_key" type="key">
					<_short>Move Up</_short>
					<_long>Move along the keystone up</_long>
					<default>&lt;Control&gt;&lt;Alt&gt;Up</default>
				</option>
				<option name="down_key" type="key">
					<_short>Move Down</_short>
					<_long>Move along the keystone down</_long>
					<default>&lt;Control&gt;&lt;Alt&gt;Down</default>
				</option>
			</group>
			<group>
				<_short>Viewport Switching</_short>
				<option name="mmmode" type="int">
					<_short>Multimonitor behavior</_short>
					<_long>How should a multimonitor configuration be handled</_long>
					<default>0</default>
					<min>0</min>
					<max>1</max>
					<desc>
						<value>0</value>
						<_name>Switch all</_name>
					</desc>
					<desc>
						<value>1</value>
						<_name>Switch separately</_name>
					</desc>
				</option>
			</group>
		</options>
	</plugin>
</compiz>
